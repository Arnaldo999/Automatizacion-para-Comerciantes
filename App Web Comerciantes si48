                    <label class="input-label">Monto del producto</label>
                    <input 
                        type="number" 
                        id="montoInput" 
                        class="input-field" 
                        placeholder="0.00"
                        step="0.01"
                        min="0">
                </div>
                <button class="btn-add" onclick="agregarItem()">‚ûï Agregar Item</button>
            </div>

            <div class="items-list-container">
                <div class="items-header">
                    <span class="items-title">Items</span>
                    <span class="items-count" id="itemsCount">0</span>
                </div>
                <div class="items-list" id="itemsList">
                    <div class="empty-items">No hay items</div>
                </div>
            </div>

            <div class="action-buttons">
                <button class="btn-action btn-cancel" onclick="cancelarVenta()">‚úï Cancelar</button>
                <button class="btn-action btn-cobrar" id="btnCobrar" onclick="mostrarModalCobro()" disabled>
                    üíµ Cobrar <span id="totalCobrar">$ 0.00</span>
                </button>
            </div>
        </div>

        <!-- NUEVO GASTO -->
        <div id="gastos-screen" class="screen">
            <div class="top-bar">
                <button class="btn-back" onclick="showMenuScreen()">‚Üê Volver</button>
            </div>

            <div class="display-container">
                <div class="display-label">Nuevo Gasto</div>
                <div class="display-amount" style="font-size: 2rem; color: var(--warning-red);">üìä</div>
            </div>

            <div class="input-section">
                <div class="input-group">
                    <label class="input-label">Monto</label>
                    <input 
                        type="number" 
                        id="montoGasto" 
                        class="input-field" 
                        placeholder="0.00"
                        step="0.01"
                        min="0">
                </div>

                <div class="input-group">
                    <label class="input-label">Categor√≠a</label>
                    <div class="custom-select-wrapper">
                        <div class="custom-select" id="customSelect">
                            <div class="select-trigger" id="selectTrigger">
                                <span id="selectedText">Selecciona una categor√≠a</span>
                                <span class="select-arrow">‚ñº</span>
                            </div>
                            <div class="select-options">
                                <div class="custom-option" data-value="Alquiler">üè† Alquiler</div>
                                <div class="custom-option" data-value="Servicios">‚ö° Servicios</div>
                                <div class="custom-option" data-value="Mercader√≠a">üì¶ Mercader√≠a</div>
                                <div class="custom-option" data-value="Sueldos">üíº Sueldos</div>
                                <div class="custom-option" data-value="Impuestos">üìã Impuestos</div>
                                <div class="custom-option" data-value="Otros">üìå Otros</div>
                            </div>
                        </div>
                        <input type="hidden" id="categoriaGasto" value="">
                    </div>
                </div>

                <div class="input-group">
                    <label class="input-label">Descripci√≥n (opcional)</label>
                    <textarea 
                        id="descripcionGasto" 
                        class="input-field" 
                        placeholder="Detalles del gasto..."
                        rows="3"></textarea>
                </div>

                <button class="btn-save" id="btnGuardarGasto" onclick="guardarGasto()">
                    üíæ Guardar Gasto
                </button>
            </div>
        </div>
    </div>

    <!-- MODAL COBRO -->
    <div id="modalCobro" class="modal-overlay">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-title">M√©todo de Pago</div>
                <div class="modal-amount" id="modalAmount">$ 0.00</div>
            </div>

            <div class="payment-methods">
                <button class="btn-payment" onclick="procesarCobro('Efectivo')">
                    üíµ Efectivo
                </button>
                <button class="btn-payment" onclick="procesarCobro('Tarjeta')">
                    üí≥ Tarjeta
                </button>
                <button class="btn-payment" onclick="procesarCobro('Transferencia')">
                    üè¶ Transferencia
                </button>
            </div>

            <button class="btn-modal-cancel" onclick="cerrarModalCobro()">
                Cancelar
            </button>
        </div>
    </div>

    <!-- INDICADOR DE SINCRONIZACI√ìN -->
    <div id="syncIndicator" class="sync-indicator">
        <div class="sync-dot"></div>
        <span id="syncText">Sincronizado</span>
    </div>

    <!-- NOTIFICACI√ìN -->
    <div id="notification" class="notification"></div>

    <script>
        // ============================================
        // CONFIGURACI√ìN - INSTANCIA: arielayalasi48
        // ============================================
        const WEBHOOKS = {
            CONSULTA: 'https://arielayalasi48.app.n8n.cloud/webhook/obtener-comerciante',
            GUARDAR: 'https://arielayalasi48.app.n8n.cloud/webhook-test/guardar-transaccion'
        };

        let comercianteData = { id: '', nombre: '' };
        let ventaActual = { items: [], total: 0 };

        // ============================================
        // SISTEMA DE SINCRONIZACI√ìN OPTIMISTA (NUEVO)
        // ============================================
        const SyncManager = {
            queue: [],
            syncing: false,
            
            saveToLocal(data) {
                const pendientes = JSON.parse(localStorage.getItem('transacciones_pendientes') || '[]');
                pendientes.push({
                    ...data,
                    timestamp: new Date().toISOString(),
                    sincronizado: false,
                    intentos: 0
                });
                localStorage.setItem('transacciones_pendientes', JSON.stringify(pendientes));
            },
            
            markAsSynced(timestamp) {
                const pendientes = JSON.parse(localStorage.getItem('transacciones_pendientes') || '[]');
                const actualizado = pendientes.map(t => 
                    t.timestamp === timestamp ? {...t, sincronizado: true} : t
                );
                localStorage.setItem('transacciones_pendientes', JSON.stringify(actualizado));
                this.cleanOldSynced();
            },
            
            cleanOldSynced() {
                const pendientes = JSON.parse(localStorage.getItem('transacciones_pendientes') || '[]');
                const hace7Dias = new Date();
                hace7Dias.setDate(hace7Dias.getDate() - 7);
                
                const limpio = pendientes.filter(t => 
                    !t.sincronizado || new Date(t.timestamp) > hace7Dias
                );
                
                localStorage.setItem('transacciones_pendientes', JSON.stringify(limpio));
            },
            
            async sendToN8n(data) {
                try {
                    this.showSyncIndicator('syncing', 'Sincronizando...');
                    
                    const response = await fetch(WEBHOOKS.GUARDAR, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(data)
                    });

                    if (response.ok) {
                        this.markAsSynced(data.timestamp);
                        this.showSyncIndicator('synced', 'Sincronizado', 2000);
                        return true;
                    } else {
                        throw new Error('Error en respuesta del servidor');
                    }
                } catch (error) {
                    console.error('Error al sincronizar:', error);
                    this.showSyncIndicator('error', 'Error al sincronizar', 3000);
                    return false;
                }
            },
            
            async syncPending() {
                if (this.syncing) return;
                this.syncing = true;
                
                const pendientes = JSON.parse(localStorage.getItem('transacciones_pendientes') || '[]');
                const noSincronizados = pendientes.filter(t => !t.sincronizado && t.intentos < 5);
                
                for (const transaccion of noSincronizados) {
                    const success = await this.sendToN8n(transaccion);
                    if (!success) {
                        transaccion.intentos++;
                        localStorage.setItem('transacciones_pendientes', JSON.stringify(pendientes));
                    }
                    await new Promise(resolve => setTimeout(resolve, 500));
                }
                
                this.syncing = false;
            },
            
            showSyncIndicator(state, text, duration = 0) {
                const indicator = document.getElementById('syncIndicator');
                const dot = indicator.querySelector('.sync-dot');
                const textEl = document.getElementById('syncText');
                
                indicator.className = `sync-indicator show ${state}`;
                textEl.textContent = text;
                
                if (state === 'syncing') {
                    dot.classList.add('pulse');
                } else {
                    dot.classList.remove('pulse');
                }
                
                if (duration > 0) {
                    setTimeout(() => {
                        indicator.classList.remove('show');
                    }, duration);
                }
            },
            
            getPendingStats() {
                const pendientes = JSON.parse(localStorage.getItem('transacciones_pendientes') || '[]');
                return {
                    total: pendientes.length,
                    pendientes: pendientes.filter(t => !t.sincronizado).length,
                    sincronizados: pendientes.filter(t => t.sincronizado).length
                };
            }
        };

        setInterval(() => SyncManager.syncPending(), 30000);
        window.addEventListener('online', () => SyncManager.syncPending());

        // ============================================
        // CONFIRMACI√ìN OPTIMISTA (NUEVO)
        // ============================================
        function mostrarConfirmacionOptimista(data) {
            const mensaje = document.createElement('div');
            mensaje.className = 'confirmacion-flash';
            
            const icono = data.tipo === 'INGRESO' ? 'üí∞' : 'üìä';
            const tipoTexto = data.tipo === 'INGRESO' ? 'Venta guardada' : 'Gasto guardado';
            
            mensaje.innerHTML = `
                <div class="checkmark">${icono}</div>
                <p>${tipoTexto}</p>
                <p class="monto">$ ${data.monto.toFixed(2)}</p>
            `;
            
            document.body.appendChild(mensaje);
            
            setTimeout(() => {
                mensaje.classList.add('fade-out');
                setTimeout(() => mensaje.remove(), 500);
            }, 2000);
        }

        // ============================================
        // INICIALIZACI√ìN
        // ============================================
        window.addEventListener('DOMContentLoaded', async () => {
            const params = new URLSearchParams(window.location.search);
            const id = params.get('id');

            if (!id) {
                mostrarNotificacion('‚ùå Error: ID ausente en la URL', 'error');
                return;
            }
            await cargarComercianteData(id);
            cargarVentaGuardada();
            setTimeout(() => SyncManager.syncPending(), 2000);
        });

        async function cargarComercianteData(id) {
            try {
                const response = await fetch(`${WEBHOOKS.CONSULTA}?id=${id}`);
                const data = await response.json();
                
                comercianteData = {
                    id: id,
                    nombre: data.Nombre_Local || data.nombre || 'Comerciante'
                };

                document.getElementById('userName').textContent = comercianteData.nombre;
                document.getElementById('userId').textContent = comercianteData.id;
            } catch (error) {
                console.error('Error:', error);
                mostrarNotificacion('‚ùå Error al cargar datos', 'error');
            }
        }

        function showMenuScreen() { hideAllScreens(); document.getElementById('menu-screen').classList.add('active'); }
        function showVentasScreen() { hideAllScreens(); document.getElementById('ventas-screen').classList.add('active'); document.getElementById('montoInput').focus(); }
        function showGastosScreen() { hideAllScreens(); document.getElementById('gastos-screen').classList.add('active'); document.getElementById('montoGasto').focus(); }
        function hideAllScreens() { document.querySelectorAll('.screen').forEach(s => s.classList.remove('active')); }

        function agregarItem() {
            const input = document.getElementById('montoInput');
            const monto = parseFloat(input.value);
            if (!monto || monto <= 0) { mostrarNotificacion('‚ö†Ô∏è Ingresa monto', 'error'); return; }
            ventaActual.items.push(monto);
            ventaActual.total += monto;
            actualizarDisplayTotal();
            actualizarListaItems();
            guardarVentaTemporal();
            input.value = ''; input.focus();
            document.getElementById('totalDisplay').classList.add('pulse');
            setTimeout(() => document.getElementById('totalDisplay').classList.remove('pulse'), 600);
        }

        function actualizarDisplayTotal() {
            const totalF = ventaActual.total.toFixed(2);
            document.getElementById('totalDisplay').textContent = `$ ${totalF}`;
            document.getElementById('totalCobrar').textContent = `$ ${totalF}`;
            document.getElementById('btnCobrar').disabled = ventaActual.items.length === 0;
        }

        function actualizarListaItems() {
            const list = document.getElementById('itemsList');
            document.getElementById('itemsCount').textContent = ventaActual.items.length;
            if (ventaActual.items.length === 0) { list.innerHTML = '<div class="empty-items">No hay items</div>'; return; }
            list.innerHTML = ventaActual.items.map((it, idx) => `
                <div class="item">
                    <span class="item-price">$ ${it.toFixed(2)}</span>
                    <button class="btn-remove" onclick="eliminarItem(${idx})">√ó</button>
                </div>
            `).join('');
        }

        function eliminarItem(idx) {
            ventaActual.total -= ventaActual.items[idx];
            ventaActual.items.splice(idx, 1);
            actualizarDisplayTotal(); actualizarListaItems(); guardarVentaTemporal();
        }

        function cancelarVenta() {
            if (ventaActual.items.length > 0 && confirm('¬øCancelar?')) {
                ventaActual = { items: [], total: 0 };
                actualizarDisplayTotal(); actualizarListaItems(); limpiarVentaTemporal();
            }
            showMenuScreen();
        }

        function mostrarModalCobro() {
            document.getElementById('modalAmount').textContent = `$ ${ventaActual.total.toFixed(2)}`;
            document.getElementById('modalCobro').classList.add('active');
        }
        function cerrarModalCobro() { document.getElementById('modalCobro').classList.remove('active'); }

        // ============================================
        // PROCESAR COBRO CON OPTIMISTIC UI (MEJORADO)
        // ============================================
        async function procesarCobro(metodoPago) {
            cerrarModalCobro();
            
            const payload = {
                id_comerciante: comercianteData.id,
                tipo: 'INGRESO',
                monto: ventaActual.total,
                metodo: metodoPago,
                descripcion: `Venta de ${ventaActual.items.length} productos`,
                fecha_hora: new Date().toISOString(),
                timestamp: new Date().toISOString()
            };

            mostrarConfirmacionOptimista(payload);
            crearConfetti();
            
            ventaActual = { items: [], total: 0 };
            limpiarVentaTemporal();
            actualizarDisplayTotal();
            actualizarListaItems();
            
            SyncManager.saveToLocal(payload);
            setTimeout(showMenuScreen, 1500);
            SyncManager.sendToN8n(payload);
        }

        // ============================================
        // GUARDAR GASTO CON OPTIMISTIC UI (MEJORADO)
        // ============================================
        async function guardarGasto() {
            const monto = parseFloat(document.getElementById('montoGasto').value);
            const cat = document.getElementById('categoriaGasto').value;
            const desc = document.getElementById('descripcionGasto').value;

            if (!monto || !cat) { 
                mostrarNotificacion('‚ö†Ô∏è Completa los campos', 'error'); 
                return; 
            }

            const payload = {
                id_comerciante: comercianteData.id,
                tipo: 'GASTO',
                monto: monto,
                categoria: cat,
                descripcion: desc || `Gasto: ${cat}`,
                fecha_hora: new Date().toISOString(),
                timestamp: new Date().toISOString()
            };

            mostrarConfirmacionOptimista(payload);
            
            document.getElementById('montoGasto').value = '';
            document.getElementById('descripcionGasto').value = '';
            document.getElementById('selectedText').textContent = 'Selecciona una categor√≠a';
            document.getElementById('categoriaGasto').value = '';
            document.getElementById('selectTrigger').classList.remove('selected');
            
            SyncManager.saveToLocal(payload);
            setTimeout(showMenuScreen, 1500);
            SyncManager.sendToN8n(payload);
        }

        document.getElementById('selectTrigger').addEventListener('click', () => {
            document.getElementById('customSelect').classList.toggle('open');
        });

        document.querySelectorAll('.custom-option').forEach(opt => {
            opt.addEventListener('click', (e) => {
                const val = e.target.dataset.value;
                document.getElementById('selectedText').textContent = val;
                document.getElementById('categoriaGasto').value = val;
                document.getElementById('selectTrigger').classList.add('selected');
                document.getElementById('customSelect').classList.remove('open');
            });
        });

        function guardarVentaTemporal() { localStorage.setItem(`v_${comercianteData.id}`, JSON.stringify(ventaActual)); }
        function cargarVentaGuardada() {
            const s = localStorage.getItem(`v_${comercianteData.id}`);
            if (s) { ventaActual = JSON.parse(s); actualizarDisplayTotal(); actualizarListaItems(); }
        }
        function limpiarVentaTemporal() { localStorage.removeItem(`v_${comercianteData.id}`); }

        function mostrarNotificacion(m, t) {
            const n = document.getElementById('notification');
            n.textContent = m; n.className = `notification ${t} show`;
            setTimeout(() => n.classList.remove('show'), 3000);
        }

        function crearConfetti() {
            for (let i = 0; i < 40; i++) {
                const c = document.createElement('div');
                c.className = 'confetti';
                c.style.left = Math.random() * 100 + '%';
                c.style.background = ['#00ff88','#00d4ff','#ffc700'][Math.floor(Math.random()*3)];
                c.style.setProperty('--x', (Math.random() - 0.5) * 2);
                document.body.appendChild(c);
                setTimeout(() => c.remove(), 3000);
            }
        }
    </script>
</body>
</html>
