  <script>
    // ========================================
    // CONFIGURACI√ìN - CAMBIA ESTAS URLs
    // ========================================
    const CONFIG = {
      WEBHOOK_OBTENER_COMERCIANTE: 'https://arnaldoayala999.app.n8n.cloud/webhook/obtener-comerciante',
      WEBHOOK_GUARDAR_TRANSACCION: 'https://arnaldoayala999.app.n8n.cloud/webhook/guardar-transaccion'
    };

    // ========================================
    // VARIABLES GLOBALES
    // ========================================
    let comercianteData = null;
    let tipoSeleccionado = 'INGRESO';
    let metodoSeleccionado = '';
    let categoriaSeleccionada = '';

    // ========================================
    // OBTENER ID DE LA URL
    // ========================================
    function obtenerIDdeURL() {
      const params = new URLSearchParams(window.location.search);
      return params.get('id');
    }

    // ========================================
    // CARGAR DATOS DEL COMERCIANTE
    // ========================================
    async function cargarComercianteData() {
      const id = obtenerIDdeURL();
      
      if (!id) {
        mostrarError('No se encontr√≥ el ID del comerciante en la URL');
        return;
      }

      try {
        const response = await fetch(`${CONFIG.WEBHOOK_OBTENER_COMERCIANTE}?id=${id}`);
        const data = await response.json();

        if (data.error) {
          mostrarError(data.message || 'Comerciante no encontrado');
          return;
        }

        comercianteData = data;
        mostrarInfoComerciente(data);
      } catch (error) {
        console.error('Error:', error);
        mostrarError('Error al cargar los datos del comerciante');
      }
    }

    // ========================================
    // MOSTRAR INFO DEL COMERCIANTE
    // ========================================
    function mostrarInfoComerciente(data) {
      const infoDiv = document.getElementById('comercianteInfo');
      infoDiv.classList.remove('loading');
      infoDiv.innerHTML = `
        <p style="font-size: 14px; margin-bottom: 5px;">
          <strong>üë§ Comerciante:</strong> ${data.nombre}
        </p>
        <p style="font-size: 12px; opacity: 0.9;">
          ID: ${data.id}
        </p>
      `;
    }

    // ========================================
    // MANEJO DEL TIPO DE TRANSACCI√ìN
    // ========================================
    document.querySelectorAll('.tipo-btn').forEach(btn => {
      btn.addEventListener('click', function() {
        document.querySelectorAll('.tipo-btn').forEach(b => b.classList.remove('active', 'ingreso', 'gasto'));
        
        const tipo = this.dataset.tipo;
        tipoSeleccionado = tipo;
        
        if (tipo === 'INGRESO') {
          this.classList.add('active', 'ingreso');
          document.getElementById('metodoGroup').classList.remove('hidden');
          document.getElementById('categoriaGroup').classList.add('hidden');
          document.getElementById('descripcionLabel').textContent = 'üìù Descripci√≥n (Opcional)';
          document.getElementById('submitBtn').className = 'submit-btn ingreso';
          document.getElementById('submitBtn').textContent = '‚úÖ Registrar Ingreso';
        } else {
          this.classList.add('active', 'gasto');
          document.getElementById('metodoGroup').classList.add('hidden');
          document.getElementById('categoriaGroup').classList.remove('hidden');
          document.getElementById('descripcionLabel').textContent = 'üìù Descripci√≥n (¬øEn qu√© gastaste?)';
          document.getElementById('submitBtn').className = 'submit-btn gasto';
          document.getElementById('submitBtn').textContent = '‚úÖ Registrar Gasto';
        }
        
        // Limpiar selecciones
        metodoSeleccionado = '';
        categoriaSeleccionada = '';
        document.querySelectorAll('.option-btn').forEach(b => b.classList.remove('active'));
      });
    });

    // ========================================
    // MANEJO DE M√âTODO DE COBRO
    // ========================================
    document.querySelectorAll('[data-metodo]').forEach(btn => {
      btn.addEventListener('click', function() {
        document.querySelectorAll('[data-metodo]').forEach(b => b.classList.remove('active'));
        this.classList.add('active');
        metodoSeleccionado = this.dataset.metodo;
      });
    });

    // ========================================
    // MANEJO DE CATEGOR√çA DE GASTO
    // ========================================
    document.querySelectorAll('[data-categoria]').forEach(btn => {
      btn.addEventListener('click', function() {
        document.querySelectorAll('[data-categoria]').forEach(b => b.classList.remove('active', 'categoria'));
        this.classList.add('active', 'categoria');
        categoriaSeleccionada = this.dataset.categoria;
      });
    });

    // ========================================
    // ENVIAR FORMULARIO
    // ========================================
    document.getElementById('transaccionForm').addEventListener('submit', async function(e) {
      e.preventDefault();

      const monto = document.getElementById('monto').value;
      const descripcion = document.getElementById('descripcion').value;

      // Validaciones
      if (!monto || monto <= 0) {
        mostrarError('Por favor ingresa un monto v√°lido');
        return;
      }

      if (tipoSeleccionado === 'INGRESO' && !metodoSeleccionado) {
        mostrarError('Por favor selecciona un m√©todo de cobro');
        return;
      }

      if (tipoSeleccionado === 'GASTO' && !categoriaSeleccionada) {
        mostrarError('Por favor selecciona una categor√≠a de gasto');
        return;
      }

      // Preparar datos
      const transaccion = {
        id_comerciante: comercianteData.id,
        fecha_hora: new Date().toISOString(),
        tipo: tipoSeleccionado,
        monto: parseFloat(monto),
        metodo: tipoSeleccionado === 'INGRESO' ? metodoSeleccionado : '',
        categoria: tipoSeleccionado === 'GASTO' ? categoriaSeleccionada : '',
        descripcion: descripcion
      };

      // Deshabilitar bot√≥n
      const submitBtn = document.getElementById('submitBtn');
      submitBtn.disabled = true;
      submitBtn.innerHTML = '<span class="spinner"></span> Guardando...';

      try {
        const response = await fetch(CONFIG.WEBHOOK_GUARDAR_TRANSACCION, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(transaccion)
        });

        const result = await response.json();

        if (result.success) {
          mostrarExito('¬°Transacci√≥n registrada con √©xito!');
          limpiarFormulario();
        } else {
          mostrarError('Error al guardar la transacci√≥n');
        }
      } catch (error) {
        console.error('Error:', error);
        mostrarError('Error de conexi√≥n. Intenta nuevamente.');
      } finally {
        submitBtn.disabled = false;
        submitBtn.innerHTML = tipoSeleccionado === 'INGRESO' ? '‚úÖ Registrar Ingreso' : '‚úÖ Registrar Gasto';
      }
    });

    // ========================================
    // FUNCIONES DE ALERTA
    // ========================================
    function mostrarExito(mensaje) {
      const alertDiv = document.createElement('div');
      alertDiv.className = 'alert alert-success fade-in';
      alertDiv.innerHTML = `
        <span style="font-size: 20px;">‚úÖ</span>
        <span><strong>¬°√âxito!</strong> ${mensaje}</span>
      `;
      
      const container = document.getElementById('alertContainer');
      container.innerHTML = '';
      container.appendChild(alertDiv);
      
      setTimeout(() => {
        alertDiv.remove();
      }, 4000);
    }

    function mostrarError(mensaje) {
      const alertDiv = document.createElement('div');
      alertDiv.className = 'alert alert-error fade-in';
      alertDiv.innerHTML = `
        <span style="font-size: 20px;">‚ö†Ô∏è</span>
        <span><strong>Error:</strong> ${mensaje}</span>
      `;
      
      const container = document.getElementById('alertContainer');
      container.innerHTML = '';
      container.appendChild(alertDiv);
      
      setTimeout(() => {
        alertDiv.remove();
      }, 5000);
    }

    // ========================================
    // LIMPIAR FORMULARIO
    // ========================================
    function limpiarFormulario() {
      document.getElementById('monto').value = '';
      document.getElementById('descripcion').value = '';
      metodoSeleccionado = '';
      categoriaSeleccionada = '';
      document.querySelectorAll('.option-btn').forEach(b => b.classList.remove('active', 'categoria'));
    }

    // ========================================
    // INICIALIZAR AL CARGAR
    // ========================================
    window.addEventListener('DOMContentLoaded', () => {
      cargarComercianteData();
    });
  </script>
</body>
</html>
