<body>
  <div class="container">
    <!-- HEADER -->
    <div class="header">
      <h1>üí∞ Registro de Transacciones</h1>
      <p style="font-size: 14px; opacity: 0.9; margin-top: 5px;">Registra tus ingresos y gastos diarios</p>
      
      <div class="comerciante-info loading" id="comercianteInfo">
        <p style="font-size: 14px;">üîÑ Cargando informaci√≥n...</p>
      </div>
    </div>

    <!-- FORMULARIO -->
    <div class="form-container">
      <div id="alertContainer"></div>

      <form id="transaccionForm">
        <!-- TIPO DE TRANSACCI√ìN -->
        <div class="form-group">
          <label class="form-label">üìä Tipo de Transacci√≥n</label>
          <div class="tipo-buttons">
            <div class="tipo-btn active ingreso" data-tipo="INGRESO">
              <div class="tipo-icon">üìà</div>
              <div class="tipo-text">INGRESO</div>
            </div>
            <div class="tipo-btn" data-tipo="GASTO">
              <div class="tipo-icon">üìâ</div>
              <div class="tipo-text">GASTO</div>
            </div>
          </div>
        </div>

        <!-- MONTO -->
        <div class="form-group">
          <label class="form-label">üíµ Monto *</label>
          <div class="input-group">
            <span class="input-prefix">$</span>
            <input type="number" id="monto" step="0.01" placeholder="0.00" required>
          </div>
        </div>

        <!-- M√âTODO DE COBRO (solo INGRESO) -->
        <div class="form-group" id="metodoGroup">
          <label class="form-label">üí≥ M√©todo de Cobro *</label>
          <div class="metodo-grid">
            <div class="option-btn" data-metodo="Efectivo">
              <span class="option-icon">üíµ</span>
              <span class="option-text">Efectivo</span>
            </div>
            <div class="option-btn" data-metodo="Tarjeta de Credito">
              <span class="option-icon">üí≥</span>
              <span class="option-text">Tarjeta de Cr√©dito</span>
            </div>
            <div class="option-btn" data-metodo="Transferencia">
              <span class="option-icon">üè¶</span>
              <span class="option-text">Transferencia</span>
            </div>
            <div class="option-btn" data-metodo="Fiado a credito">
              <span class="option-icon">üìù</span>
              <span class="option-text">Fiado a cr√©dito</span>
            </div>
          </div>
        </div>

        <!-- CATEGOR√çA DE GASTO (solo GASTO) -->
        <div class="form-group hidden" id="categoriaGroup">
          <label class="form-label">üìã Categor√≠a de Gasto *</label>
          <div class="categoria-grid">
            <div class="option-btn" data-categoria="Proveedores">
              <span class="option-icon">üì¶</span>
              <span class="option-text">Proveedores</span>
            </div>
            <div class="option-btn" data-categoria="Servicios">
              <span class="option-icon">‚ö°</span>
              <span class="option-text">Servicios</span>
            </div>
            <div class="option-btn" data-categoria="Alquiler">
              <span class="option-icon">üè†</span>
              <span class="option-text">Alquiler</span>
            </div>
            <div class="option-btn" data-categoria="Sueldos">
              <span class="option-icon">üë•</span>
              <span class="option-text">Sueldos</span>
            </div>
            <div class="option-btn" data-categoria="Otros">
              <span class="option-icon">üìã</span>
