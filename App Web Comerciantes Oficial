    <script>
        // üîß WEBHOOKS - URLS ACTUALIZADAS
        const WEBHOOKS = {
            CONSULTA: 'https://n8n-comerciantes-n8n.yqsgz7.easypanel.host/webhook/comerciante',
            GUARDAR: 'https://n8n-comerciantes-n8n.yqsgz7.easypanel.host/webhook/pos-guardar-venta',
            HISTORIAL: 'https://n8n-comerciantes-n8n.yqsgz7.easypanel.host/webhook/historial',
            EDITAR: 'https://n8n-comerciantes-n8n.yqsgz7.easypanel.host/webhook/transaccion-actualizar',
            ELIMINAR: 'https://n8n-comerciantes-n8n.yqsgz7.easypanel.host/webhook/transaccion-eliminar'
        };

        let comercianteData = { id: '', nombre: '', uuid: '' };
        let ventaActual = { items: [], total: 0 };
        let contadorProductos = 1;
        let transaccionesData = [];
        let filtroActual = 'semana';
        let transaccionEditando = null;

        window.addEventListener('DOMContentLoaded', async () => {
            const params = new URLSearchParams(window.location.search);
            const id = params.get('id');

            if (!id) {
                mostrarNotificacion('‚ùå Error: ID ausente en la URL', 'error');
                return;
            }
            await cargarComercianteData(id);
            cargarVentaGuardada();
        });

        async function cargarComercianteData(id) {
            try {
                console.log('üîç Cargando comerciante:', id);
                console.log('üîó URL:', `${WEBHOOKS.CONSULTA}?id=${id}`);
                
                const response = await fetch(`${WEBHOOKS.CONSULTA}?id=${id}`);
                console.log('üì° Response status:', response.status);
                
                const data = await response.json();
                console.log('üì¶ Data recibida:', data);
                
                // Verificar si hay error en la respuesta
                if (data.error) {
                    console.error('‚ùå Error en respuesta:', data.message);
                    mostrarNotificacion(`‚ùå ${data.message}`, 'error');
                    return;
                }
                
                comercianteData = {
                    id: id,
                    nombre: data.nombre || data.Nombre_Local || 'Comerciante',
                    uuid: data.uuid || data.id || '' // UUID de Supabase
                };
                
                console.log('‚úÖ Comerciante cargado:', comercianteData);

                document.getElementById('userName').textContent = comercianteData.nombre;
                document.getElementById('userId').textContent = comercianteData.id;
            } catch (error) {
                console.error('üí• Error completo:', error);
                mostrarNotificacion('‚ùå Error al cargar datos', 'error');
            }
        }

        function showMenuScreen() { hideAllScreens(); document.getElementById('menu-screen').classList.add('active'); }
        function showVentasScreen() { hideAllScreens(); document.getElementById('ventas-screen').classList.add('active'); document.getElementById('montoInput').focus(); }
        function showGastosScreen() { hideAllScreens(); document.getElementById('gastos-screen').classList.add('active'); document.getElementById('montoGasto').focus(); }
        async function showHistorialScreen() { 
            hideAllScreens(); 
            document.getElementById('historial-screen').classList.add('active'); 
            await cargarHistorial();
        }
        function hideAllScreens() { document.querySelectorAll('.screen').forEach(s => s.classList.remove('active')); }

        // FUNCIONES DE VENTAS (sin cambios)
        function agregarItem() {
            const inputMonto = document.getElementById('montoInput');
            const inputDesc = document.getElementById('descripcionInput');
            const monto = parseFloat(inputMonto.value);
            if (!monto || monto <= 0) { mostrarNotificacion('‚ö†Ô∏è Ingresa monto', 'error'); return; }
            
            const descripcion = inputDesc.value.trim() || `Producto ${contadorProductos}`;
            ventaActual.items.push({ monto: monto, descripcion: descripcion });
            contadorProductos++;
            ventaActual.total += monto;
            actualizarDisplayTotal();
            actualizarListaItems();
            guardarVentaTemporal();
            inputMonto.value = ''; inputDesc.value = ''; inputMonto.focus();
            document.getElementById('totalDisplay').classList.add('pulse');
            setTimeout(() => document.getElementById('totalDisplay').classList.remove('pulse'), 600);
        }

        function actualizarDisplayTotal() {
            const totalF = ventaActual.total.toFixed(2);
            document.getElementById('totalDisplay').textContent = `$ ${totalF}`;
            document.getElementById('totalCobrar').textContent = `$ ${totalF}`;
            document.getElementById('btnCobrar').disabled = ventaActual.items.length === 0;
        }

        function actualizarListaItems() {
            const list = document.getElementById('itemsList');
            document.getElementById('itemsCount').textContent = ventaActual.items.length;
            if (ventaActual.items.length === 0) { list.innerHTML = '<div class="empty-items">No hay items</div>'; return; }
            list.innerHTML = ventaActual.items.map((item, idx) => `
                <div class="item">
                    <div style="flex: 1;">
                        <div style="font-size: 0.9rem; color: var(--text-dim); margin-bottom: 4px;">
                            ${item.descripcion}
                        </div>
                        <div class="item-price">$ ${item.monto.toFixed(2)}</div>
                    </div>
                    <button class="btn-remove" onclick="eliminarItem(${idx})">√ó</button>
                </div>
            `).join('');
        }

        function eliminarItem(idx) {
            ventaActual.total -= ventaActual.items[idx].monto;
            ventaActual.items.splice(idx, 1);
            actualizarDisplayTotal(); actualizarListaItems(); guardarVentaTemporal();
        }

        function cancelarVenta() {
            if (ventaActual.items.length > 0 && confirm('¬øCancelar?')) {
                ventaActual = { items: [], total: 0 };
                contadorProductos = 1;
                actualizarDisplayTotal(); actualizarListaItems(); limpiarVentaTemporal();
            }
            showMenuScreen();
        }

        function mostrarModalCobro() {
            document.getElementById('modalAmount').textContent = `$ ${ventaActual.total.toFixed(2)}`;
            document.getElementById('modalCobro').classList.add('active');
        }
        function cerrarModalCobro() { document.getElementById('modalCobro').classList.remove('active'); }

       async function procesarCobro(metodoPago) {
    cerrarModalCobro();
    const btn = document.getElementById('btnCobrar');
    btn.disabled = true;

    // ‚úÖ Construir fecha/hora local manualmente
    const ahora = new Date();
    const year = ahora.getFullYear();
    const month = String(ahora.getMonth() + 1).padStart(2, '0');
    const day = String(ahora.getDate()).padStart(2, '0');
    const hours = String(ahora.getHours()).padStart(2, '0');
    const minutes = String(ahora.getMinutes()).padStart(2, '0');
    const seconds = String(ahora.getSeconds()).padStart(2, '0');
    const fechaHoraLocal = `${year}-${month}-${day}T${hours}:${minutes}:${seconds}`;

    const payload = {
        id_comerciante: comercianteData.id,
        tipo: 'INGRESO',
        monto: ventaActual.total,
        metodo: metodoPago,
        descripcion: ventaActual.items.map((item, i) => `${i+1}. ${item.descripcion}: $${item.monto.toFixed(2)}`).join(', '),
        fecha_hora: fechaHoraLocal
    };

    try {
        const response = await fetch(WEBHOOKS.GUARDAR, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(payload)
        });

        if (response.ok) {
            crearConfetti();
            mostrarNotificacion(`‚úÖ Venta guardada (${metodoPago})`, 'success');
            ventaActual = { items: [], total: 0 };
            limpiarVentaTemporal();
            actualizarDisplayTotal();
            actualizarListaItems();
            setTimeout(showMenuScreen, 1500);
        } else {
            mostrarNotificacion('‚ùå Error al guardar', 'error');
        }
    } catch (error) {
        console.error('Error:', error);
        mostrarNotificacion('‚ùå Error de conexi√≥n', 'error');
    } finally {
        btn.disabled = false;
    }
}

async function guardarGasto() {
    const monto = parseFloat(document.getElementById('montoGasto').value);
    const cat = document.getElementById('categoriaGasto').value;
    const desc = document.getElementById('descripcionGasto').value;

    if (!monto || !cat) { 
        mostrarNotificacion('‚ö†Ô∏è Completa los campos', 'error'); 
        return; 
    }

    const btn = document.getElementById('btnGuardarGasto');
    btn.disabled = true;

    // ‚úÖ Construir fecha/hora local manualmente
    const ahora = new Date();
    const year = ahora.getFullYear();
    const month = String(ahora.getMonth() + 1).padStart(2, '0');
    const day = String(ahora.getDate()).padStart(2, '0');
    const hours = String(ahora.getHours()).padStart(2, '0');
    const minutes = String(ahora.getMinutes()).padStart(2, '0');
    const seconds = String(ahora.getSeconds()).padStart(2, '0');
    const fechaHoraLocal = `${year}-${month}-${day}T${hours}:${minutes}:${seconds}`;

    const payload = {
        id_comerciante: comercianteData.id,
        tipo: 'GASTO',
        monto: monto,
        categoria: cat,
        descripcion: desc || `Gasto: ${cat}`,
        fecha_hora: fechaHoraLocal
    };

    try {
        const response = await fetch(WEBHOOKS.GUARDAR, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(payload)
        });

        if (response.ok) {
            mostrarNotificacion('‚úÖ Gasto guardado', 'success');
            document.getElementById('montoGasto').value = '';
            document.getElementById('descripcionGasto').value = '';
            document.getElementById('selectedText').textContent = 'Selecciona una categor√≠a';
            document.getElementById('categoriaGasto').value = '';
            document.getElementById('selectTrigger').classList.remove('selected');
            setTimeout(showMenuScreen, 1500);
        } else {
            mostrarNotificacion('‚ùå Error al guardar', 'error');
        }
    } catch (error) {
        console.error('Error:', error);
        mostrarNotificacion('‚ùå Error de conexi√≥n', 'error');
    } finally {
        btn.disabled = false;
    }
}
        // üìà FUNCIONES DE HISTORIAL
        async function cargarHistorial() {
            const container = document.getElementById('transactionsContainer');
            container.innerHTML = '<div class="loading">Cargando transacciones...</div>';

            try {
                const { fechaDesde, fechaHasta } = obtenerRangoFechas(filtroActual);
                
                const response = await fetch(`${WEBHOOKS.HISTORIAL}?comercio_id=${comercianteData.id}&fecha_desde=${fechaDesde}&fecha_hasta=${fechaHasta}`);
                const data = await response.json();

                transaccionesData = data.transacciones || [];
                
                // Actualizar balance
                const resumen = data.resumen || { total_ingresos: 0, total_gastos: 0, balance: 0 };
                document.getElementById('totalIngresos').textContent = `$ ${resumen.total_ingresos.toFixed(2)}`;
                document.getElementById('totalGastos').textContent = `$ ${resumen.total_gastos.toFixed(2)}`;
                
                const balanceEl = document.getElementById('balanceTotal');
                balanceEl.textContent = `$ ${resumen.balance.toFixed(2)}`;
                balanceEl.className = `balance-amount ${resumen.balance >= 0 ? 'positive' : 'negative'}`;

                // Mostrar transacciones
                mostrarTransacciones();
            } catch (error) {
                console.error('Error:', error);
                container.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">‚ùå</div>
                        <div>Error al cargar historial</div>
                    </div>
                `;
            }
        }

        function obtenerRangoFechas(filtro) {
            const ahora = new Date();
            let fechaDesde;

            if (filtro === 'semana') {
                fechaDesde = new Date(ahora);
                fechaDesde.setDate(ahora.getDate() - 7);
            } else if (filtro === 'mes') {
                fechaDesde = new Date(ahora);
                fechaDesde.setMonth(ahora.getMonth() - 1);
            } else { // a√±o
                fechaDesde = new Date(ahora);
                fechaDesde.setFullYear(ahora.getFullYear() - 1);
            }

            return {
                fechaDesde: fechaDesde.toISOString().split('T')[0],
                fechaHasta: ahora.toISOString().split('T')[0]
            };
        }

        function cambiarFiltro(filtro) {
            filtroActual = filtro;
            document.querySelectorAll('.filter-tab').forEach(tab => {
                tab.classList.toggle('active', tab.dataset.filter === filtro);
            });
            cargarHistorial();
        }

        function mostrarTransacciones() {
            const container = document.getElementById('transactionsContainer');
            
            if (transaccionesData.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">üì≠</div>
                        <div>No hay transacciones en este per√≠odo</div>
                    </div>
                `;
                return;
            }

            container.innerHTML = `
                <div class="transactions-list">
                    ${transaccionesData.map(t => `
                        <div class="transaction-item ${t.tipo.toLowerCase()}">
                            <div class="transaction-info">
                                <div class="transaction-desc">${t.descripcion || 'Sin descripci√≥n'}</div>
                                <div class="transaction-meta">
                                    ${formatearFecha(t.fecha_hora)} ‚Ä¢ ${t.metodo_pago || t.categoria_gasto || ''}
                                </div>
                            </div>
                            <div style="display: flex; align-items: center;">
                                <div class="transaction-amount ${t.tipo.toLowerCase()}">
                                    ${t.tipo === 'INGRESO' ? '+' : '-'} $ ${t.monto.toFixed(2)}
                                </div>
                                <div class="transaction-actions">
                                    <button class="btn-edit" onclick="editarTransaccion('${t.id}')">‚úèÔ∏è</button>
                                    <button class="btn-delete" onclick="eliminarTransaccion('${t.id}')">üóëÔ∏è</button>
                                </div>
                            </div>
                        </div>
                    `).join('')}
                </div>
            `;
        }

        function formatearFecha(fechaISO) {
            const fecha = new Date(fechaISO);
            return fecha.toLocaleDateString('es-AR', { 
                day: '2-digit', 
                month: '2-digit', 
                year: '2-digit',
                hour: '2-digit',
                minute: '2-digit'
            });
        }

        function editarTransaccion(id) {
            const transaccion = transaccionesData.find(t => t.id === id);
            if (!transaccion) return;

            transaccionEditando = transaccion;
            document.getElementById('editMonto').value = transaccion.monto;
            document.getElementById('editDescripcion').value = transaccion.descripcion || '';
            document.getElementById('modalEdit').classList.add('active');
        }

        function cerrarModalEdit() {
            document.getElementById('modalEdit').classList.remove('active');
            transaccionEditando = null;
        }

        async function guardarEdicion() {
    if (!transaccionEditando) return;

    const nuevoMonto = parseFloat(document.getElementById('editMonto').value);
    const nuevaDescripcion = document.getElementById('editDescripcion').value;

    if (!nuevoMonto || nuevoMonto <= 0) {
        mostrarNotificacion('‚ö†Ô∏è Ingresa un monto v√°lido', 'error');
        return;
    }

    try {
        const response = await fetch(WEBHOOKS.EDITAR, {
            method: 'PUT',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
                id: transaccionEditando.id,  // ‚úÖ CAMBIO 1: de transaccion_id a id
                monto: nuevoMonto,  // ‚úÖ CAMBIO 2: de nuevo_monto a monto
                descripcion: nuevaDescripcion  // ‚úÖ CAMBIO 3: de nueva_descripcion a descripcion
            })
        });

        if (response.ok) {
            mostrarNotificacion('‚úÖ Transacci√≥n actualizada', 'success');
            cerrarModalEdit();
            await cargarHistorial(); // Recargar lista
        } else {
            mostrarNotificacion('‚ùå Error al actualizar', 'error');
        }
    } catch (error) {
        console.error('Error:', error);
        mostrarNotificacion('‚ùå Error de conexi√≥n', 'error');
    }
}

        async function eliminarTransaccion(id) {
    if (!confirm('üìä Reporte Automatizaci√≥n 360\n\n¬øEliminar esta transacci√≥n?\nEsta acci√≥n no se puede deshacer.')) return;
    
    try {
        const response = await fetch(WEBHOOKS.ELIMINAR, {
            method: 'DELETE',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ id: id })
        });
        
        if (response.ok) {
            mostrarNotificacion('‚úÖ Transacci√≥n eliminada', 'success');
            await cargarHistorial();
        } else {
            mostrarNotificacion('‚ùå Error al eliminar', 'error');
        }
    } catch (error) {
        console.error('Error:', error);
        mostrarNotificacion('‚ùå Error de conexi√≥n', 'error');
    }
}

        // CUSTOM SELECT
        document.getElementById('selectTrigger').addEventListener('click', () => {
            document.getElementById('customSelect').classList.toggle('open');
        });

        document.querySelectorAll('.custom-option').forEach(opt => {
            opt.addEventListener('click', (e) => {
                const val = e.target.dataset.value;
                document.getElementById('selectedText').textContent = val;
                document.getElementById('categoriaGasto').value = val;
                document.getElementById('selectTrigger').classList.add('selected');
                document.getElementById('customSelect').classList.remove('open');
            });
        });

        function guardarVentaTemporal() { localStorage.setItem(`v_${comercianteData.id}`, JSON.stringify(ventaActual)); }
        function cargarVentaGuardada() {
            const s = localStorage.getItem(`v_${comercianteData.id}`);
            if (s) { ventaActual = JSON.parse(s); actualizarDisplayTotal(); actualizarListaItems(); }
        }
        function limpiarVentaTemporal() { localStorage.removeItem(`v_${comercianteData.id}`); }

        function mostrarNotificacion(m, t) {
            const n = document.getElementById('notification');
            n.textContent = m; n.className = `notification ${t} show`;
            setTimeout(() => n.classList.remove('show'), 3000);
        }

        function crearConfetti() {
            for (let i = 0; i < 40; i++) {
                const c = document.createElement('div');
                c.className = 'confetti';
                c.style.left = Math.random() * 100 + '%';
                c.style.background = ['#00ff88','#00d4ff','#ffc700'][Math.floor(Math.random()*3)];
                c.style.setProperty('--x', (Math.random() - 0.5) * 2);
                document.body.appendChild(c);
                setTimeout(() => c.remove(), 3000);
            }
        }
    </script>
</body>
</html>
